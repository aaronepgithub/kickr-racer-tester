rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // The path needs to match what's used in the application code.
    // e.g., `artifacts/${appId}/public/data/courses`
    match /artifacts/{appId}/public/data/courses/{courseId} {
      // Allow anyone to read the course list and records
      allow read: if true;
      // Allow only authenticated users (including anonymous) to upload courses and set records
      allow write: if request.auth != null;
    }
  }
}